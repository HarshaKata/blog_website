<%-include("partials/header.ejs")%>

<div class="container">
	<h3>
		ENTER DETAILS TO ADD A BLOG
	</h3>
	<form action="/blogs" method="POST">
  <div class="form-group row">
    <label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input type="text" name="blogs[title]" placeholder="enter title" class="form-control" id="inputEmail3">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword3" class="col-sm-2 col-form-label">Image</label>
    <div class="col-sm-10">
      <input type="text" name="blogs[image]" placeholder="enter image url" class="form-control" id="inputPassword3">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>

<%-include("partials/footer.ejs")%>