<html>
	<head>
		<title>BLOGS</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="stylesheets/app.css">
		<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<style type=text/css>
			#edit1{
				position:relative;
				top:10px;
				right:50px;
				border:2px black solid;
			}
		</style>
	</head>
	<body>
		<div class="container" id="edit1">
			<form action="/blogs/<%= blog._id %>" method="POST">
			  <div class="form-group row">
				<label for="inputEmail3" class="col-sm-2 col-form-label">Title</label>
				<div class="col-sm-10">
				  <input type="text" name="blog[title]" placeholder="enter title" class="form-control" id="inputEmail3">
				</div>
			  </div>
			  <div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Image</label>
				<div class="col-sm-10">
				  <input type="text" name="blog[image]" placeholder="enter image url" class="form-control" id="inputPassword3">
				</div>
			  </div>
			  <div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Description</label>
				<div class="col-sm-10">
				  <input type="text" name="blog[matter]" placeholder="enter description" class="form-control" id="inputEmail3">
				</div>
			  </div>
			  <div class="form-group row">
				<div class="col-sm-10">
				  <button type="submit" class="btn btn-primary">Submit</button>
				</div>
			  </div>
			</form>
		</div>
	</body>
</html>
