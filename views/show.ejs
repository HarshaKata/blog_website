<html>
	<head>
		<title>BLOGS</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="stylesheets/app.css">
		<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
		<style type="text/css">
			#show{
				width:20%;
				border: 2px solid black;
				position: relative;
				top:50px;
			}
			#show1{
				display: flex;
			}
			#show3{
				position:relative;
				left:6px;
				margin:5px;
			}
			#show4{
				display: flex;
			}
			#show5{
				margin-right:2px;
			}
			#third {
				font: italic small-caps bold 18px/30px Georgia, serif;
				color:black;
			}
			strong{
				font: italic small-caps bold 14px/30px Georgia, serif;
				color:black;
			}
		</style>
	</head>
	<body>
		<div class="container" id="show">
			<div id="show3">
				<div class="card" style="width: 25rem;height: 25rem;">
					<img src="<%= blog.image %>" class="card-img-top" alt="something went wrong">
					<div class="card-body">
						<h2 id="third" class="card-title"><%= blog.title %></h2>
						<div id="show1">
							<div id="show5">
								<a href="/blogs/<%=blog._id%>/edit" class="btn btn-primary">EDIT</a>
							</div>
							<div>
								<form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
								<button class="btn btn-primary">
									DELETE 
								</button>
							</form>
							</div>
							
						</div>

					</div>
				</div>
				<br/>
				<a href="/blogs/<%=blog._id%>/comments/new" class="btn btn-secondary">ADD COMMENT</a>
				<% blog.comments.forEach(function(comment){ %>
					<div id="fourth">
						<p>
							<strong><%= comment.text %> - <%=comment.author %></strong>
						</p>
						<div id="show4">
							<a href="/blogs/<%= blog._id %>/comments/<%=comment._id%>/edit"><button class="btn btn-secondary"><span class="glyphicon glyphicon-pencil"></span></button></a>
							<form action="/blogs/<%=blog._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
								<button class="btn btn-info">
									<span class="glyphicon glyphicon-trash"></span>
								</button>
							</form>
						</div>
						
					</div>
				<% }) %>		
			</div>	
		</div>
	</body>
</html>	
		
