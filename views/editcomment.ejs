<html>
	<head>
		<title>BLOGS</title>
		<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
		<link rel="stylesheet" type="text/css" href="stylesheets/app.css">
		<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<style type=text/css>
			#ecomment1{
				border:2px black solid;
			}
			#ecomment2{
				font: italic small-caps bold 24px/30px verdana;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<div class="jumbotron">
				<center>
					<h1 id="ecomment2">
						edit comment
					</h1>
				</center>	
			</div>
		</div>
		<div class="container" id="ecomment1">
			<form action="/blogs/<%= blog_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
			  <div class="form-group row">
				<label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
				<div class="col-sm-10">
				  <input type="text" name="comment[text]" placeholder="enter description" class="form-control" id="inputEmail3">
				</div>
			  </div>
			  <div class="form-group row">
				<label for="inputPassword3" class="col-sm-2 col-form-label">Author Name</label>
				<div class="col-sm-10">
				  <input type="text" name="comment[author]" placeholder="enter author name" class="form-control" id="inputPassword3">
				</div>
			  </div>
			  <div class="form-group row">
				<div class="col-sm-10">
				  <button type="submit" class="btn btn-primary">Submit</button>
				</div>
			  </div>
			</form>
		</div>
	</body>
</html>
